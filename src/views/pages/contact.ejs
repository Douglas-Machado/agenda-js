<%- include('../partials/head'); %>
<!-- body start below -->
<%- include('../partials/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-ls-2"></div>

      <div class="col-ls-8 my-4">
        <h1 class="text-center">Contato</h1>
        <p class="text-center">Crie ou edite seu contato abaixo</p>

        <%- include('../partials/messages'); %>

        <% if(contact._id) { %>
          <form  class="text-center" action="/contact/edit/<%= contact._id %>" method="POST">
        <% } else { %>
          <form  class="text-center" action="/contact/register" method="POST">
        <% } %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group mt-3">
            <input type="text" class="form-control" placeholder="nome" name="name" value="<%= contact.name %>">
          </div>
          <div class="form-group mt-3">
            <input type="text" class="form-control" placeholder="sobrenome" name="surname" value="<%= contact.surname %>">
          </div>
          <div class="form-group mt-3">
            <input type="email" class="form-control" placeholder="email" name="email" value="<%= contact.email %>">
          </div>
          <div class="form-group mt-3">
            <input type="tel" class="form-control" placeholder="tel" name="phone" value="<%= contact.phone %>">
          </div>
          <button type="submit" class="btn btn-primary mt-4">Save</button>
        </form>
      </div>

    </div>
  </div>
</div>

<%- include('../partials/footer'); %>
