<div class="container">
  <div class="row">
    <div class="col-ls-2"></div>

    <div class="col-ls-8 my-4 text-center">
      <h1 class="text-center">Bem-Vindo</h1>
      <p class="text-center">Fa√ßa login ou crie sua conta abaixo</p>

      <%- include('../partials/messages'); %>

      <div class="row">
        <div class="col-lg">
          <h4>Cadastre-se</h4>

          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <input type="email" class="form-control" placeholder="email" name="email">
              <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary mt-4">Criar conta</button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Login</h4>

          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf"" value="<%= csrfToken %>">
            <div class="form-group">
              <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="email" name="email">
            </div>
            <div class="form-group mt-4">
              <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-primary mt-4">Entrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

